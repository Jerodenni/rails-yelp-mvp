<h1>Reviews#new</h1>

<div class="container">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit 'Rate!', class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="ms-4">
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
